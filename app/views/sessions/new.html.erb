<h1>Sign in</h1>
<%= form_with(url: signin_path) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>
  <%= form.submit "Sign in", class: 'btn btn-primary' %>
<% end %>
