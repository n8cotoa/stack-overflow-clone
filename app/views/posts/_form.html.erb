<%= form_for @post do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :body, "Question" %>
  <%= f.text_area :body, class: 'form-control' %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
