<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Question" %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>
  
  <%= f.submit class: 'btn btn-success' %>
<% end %>
